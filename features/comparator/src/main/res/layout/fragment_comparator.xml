<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" >

    <data>
        <variable
            name="viewModel"
            type="com.filipe1309.abasteceai.features.comparator.presentation.ComparatorViewModel" />
    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context="com.filipe1309.abasteceai.features.comparator.ComparatorActivity" >

        <RelativeLayout
            android:id="@+id/relative_layout_first_fuel"
            android:layout_weight=".5"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <androidx.cardview.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view_first_fuel"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                card_view:cardBackgroundColor="@android:color/white"
                card_view:cardElevation="5dp"
                card_view:cardUseCompatPadding="true"
                card_view:cardCornerRadius="4dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Spinner
                        android:id="@+id/spinner_first_fuel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/first_fuels_list"
                        android:minHeight="100sp"
                        android:spinnerMode="dialog"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:id="@+id/first_fuel_value"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="50dp"
                        android:textSize="75sp"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif"
                        android:hint="@string/value"
                        android:inputType="numberDecimal"
                        android:autofillHints="fuelPrice"
                        android:text="@={``+ viewModel.firstFuel.price}"
                        android:onTextChanged="@{() -> viewModel.compareFuels()}"
                        app:layout_constraintTop_toBottomOf="@id/spinner_first_fuel"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative_layout_second_fuel"
            android:layout_weight=".5"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <androidx.cardview.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view_second_fuel"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                card_view:cardBackgroundColor="@android:color/white"
                card_view:cardElevation="5dp"
                card_view:cardUseCompatPadding="true"
                card_view:cardCornerRadius="4dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Spinner
                        android:id="@+id/spinner_second_fuel"
                        android:contentDescription="@string/second_fuels_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:spinnerMode="dialog"
                        android:minHeight="100sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:id="@+id/second_fuel_value"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="50dp"
                        android:textSize="75sp"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif"
                        android:hint="@string/value"
                        android:inputType="numberDecimal"
                        android:autofillHints="fuelPrice"
                        android:text="@={`` + viewModel.secondFuel.price}"
                        android:onTextChanged="@{() -> viewModel.compareFuels()}"
                        app:layout_constraintTop_toBottomOf="@id/spinner_second_fuel"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>

</layout>